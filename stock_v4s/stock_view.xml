<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_picking_form_v4s" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="stock_journal_id" attrs="{'required':[('picking_type_code','=','incoming')]}"/>
                </xpath>

                <xpath expr="//field[@name='group_id']" position="after">
                    <field name="purchase_id" />
                </xpath>

                <xpath expr="//field[@name='note']" position="before">
                    <separator string="Notice"/>
                    <field name="notice" nolabel="1" colspan="4" />
                    <separator string="Note"/>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="view_picking_internal_search_v4s">
            <field name="name">stock.picking.search</field>
            <field name="model">stock.picking</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <filter string="Stock Journal" domain="[]" context="{'group_by':'stock_journal_id'}"/>
                </xpath>
                <xpath expr="//field[@name='group_id']" position="after">
                    <field name="stock_journal_id"/>
                </xpath>
           </field>
        </record>

        <record model="ir.ui.view" id="vpicktree_v4s">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="stock_journal_id"/>
                </xpath>
           </field>
        </record>


