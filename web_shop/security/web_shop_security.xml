<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record id="web_shop_my_invoices" model="ir.rule">
            <field name="name">JERA webshop invoices</field>
            <field ref="account.model_account_invoice" name="model_id"/>
            <field name="domain_force">[('type','in',('out_invoice','out_refund')),('state','not in',('draft', 'cancel')),('partner_id','=',user.address_id.partner_id and user.address_id.partner_id.id)]</field>
        </record>

        <record id="web_shop_invoice_lines" model="ir.rule">
            <field name="name">JERA webshop invoices</field>
            <field ref="account.model_account_invoice_line" name="model_id"/>
            <field name="domain_force">[('invoice_id.type','in',('out_invoice','out_refund')),('invoice_id.state','not in',('draft', 'cancel')),('partner_id','=',user.address_id.partner_id and user.address_id.partner_id.id)]</field>
        </record>

        <record id="group_web_shop" model="res.groups" context="{'noadmin':True}">
            <field name="name">JERA / WEB Shop</field>
            <field name="users" eval="[(4,ref('jera.jera_anonymous_user'))]"/>
            <field name="rule_groups" eval="[(4,ref('web_shop_my_invoices')),(4,ref('web_shop_invoice_lines'))]"/>
        </record>

        <record id="group_web_shop_admin" model="res.groups" context="{'noadmin':True}">
            <field name="name">JERA / Administration / WEB Shop</field>
        </record>

	    <record model="res.users" id="res_users_web_shop_admin">
		    <field name="name">WEB Shop Administrator</field>
		    <field name="login">web_shop_admin</field>
		    <field name="password" eval="False"/>
		    <field eval="[(4,ref('group_web_shop_admin'))]" name="groups_id"/>
	    </record>

    </data>
</openerp>

