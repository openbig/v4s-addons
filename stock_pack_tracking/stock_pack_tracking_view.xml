<?xml version="1.0"?>
<openerp>
    <data>


        <record id="view_tracking_form_sntracking" model="ir.ui.view">
            <field name="name">stock.tracking.form</field>
            <field name="model">stock.tracking</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_tracking_form"/>
            <field name="arch" type="xml">
               <xpath expr="/form/notebook" position="inside">
                        <page string="Production Lots">
                            <field colspan="2" name="prodlot_ids" nolabel="1"/>
                       </page>
               </xpath>

            </field>
        </record>


        <record id="view_production_lot_form_sntracking" model="ir.ui.view">
            <field name="name">stock.production.lot.form</field>
            <field name="model">stock.production.lot</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <field name="stock_available" position = "after">
                    <field name="tracking_id"/>
                </field>
            </field>
        </record>


        <record id="view_production_lot_tree_sntracking" model="ir.ui.view">
            <field name="name">stock.production.lot.tree</field>
            <field name="model">stock.production.lot</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <tree string="Production Lot" position = "replace">
                  <tree string="Production Lot">
                    <field name="product_id"/>
                    <field name="tracking_id"/>
                    <field name="prefix" />
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="stock_available"/>
                    <field name="date"/>
                  </tree>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="search_product_lot_filter_sntrack">
            <field name="name">Production Lots Filter</field>
            <field name="model">stock.production.lot</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="stock.search_product_lot_filter"/>
            <field name="arch" type="xml">
                <group string="Group By..." position="inside">
                    <filter string="Pack" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by':'tracking_id'}"/>
                </group>
            </field>
        </record>


