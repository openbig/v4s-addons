<openerp>
    <data>
    <!-- crm.lead Leads tree view -->
    <record model="ir.ui.view" id="crm_case_tree_view_leads_v4s">
        <field name="name">Leads</field>
        <field name="model">crm.lead</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
        <field name="arch" type="xml">
            <field name="create_date" position="replace" >
                <field name="write_date" />
            </field>

            <field name="name" position="before" >
                <field name="partner_name" string="Partner Name" invisible="1" />
            </field>

            <field name="name" position="after" >
                <field name="department_company_ext" />
                <field name="prename" />
            </field>

            <field name="email_from" position="replace">
                <field name="city"/>
            </field>

            <field name="phone" position="replace">
                <field name="zip"/>
            </field>

            <!--<field name="stage_id" position="after">-->
                <!--&lt;!&ndash;states="draft,pending"&ndash;&gt;-->
                <!--<button name="case_open" string="Open" type="object" icon="gtk-go-forward" />-->
            <!--</field>-->
        </field>
    </record>
    
      <!--crm.lead Leads Form View    -->
    <record model="ir.ui.view" id="crm_case_form_view_leads_v4s">
        <field name="name">CRM - Leads Form</field>
        <field name="model">crm.lead</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">

            <field name="contact_name" position="after" >
                <field name="prename" />
            </field>

            <field name="function" position="after" >
                <field name="company_ext" />
                <field name="department_company_ext" />
            </field>

            <field name="phone" position="after" >
                <field name="phone2" />
            </field>

            <field name="fax" position="after" >
                <field name="partner_address_website" widget="url" />
                <field name="birthday_communication" />
                <field name="title_communication" />
            </field>
        </field>
    </record>

    <!-- crm.lead Lead Search View -->
    <record id="view_crm_case_leads_filter_v4s" model="ir.ui.view">
        <field name="name">CRM - Leads Search</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <field name="section_id" position="replace" />

            <field name="country_id" position="replace">
                <field name="city" />
            </field>
            <field name="name" position="after">
                <field name="stage_id" />
                <field name="contact_name"/>
            </field>


        </field>
    </record>

     <!-- Opportunities Tree View -->
    <record model="ir.ui.view" id="crm_case_tree_view_oppor_v4s">
        <field name="name">Opportunities Tree</field>
        <field name="model">crm.lead</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <field name="section_id" position="replace" />
            <field name="name" position="replace" />

            <field name="partner_id" position="replace" >
                <field name="partner_id" invisible="1" />
                <field name="partner_name" />
            </field>

            <field name="create_date" position="before" >
                <field name="name" string="Opportunity" />
            </field>

            <field name="planned_revenue" position="replace" >
                <field name="zip" />
            </field>

            <field name="probability" position="replace" >
                <field name="city" />
            </field>

            <field name="date_action" position="before" >
                <field name="contact_name" />
            </field>


        </field>
    </record>
