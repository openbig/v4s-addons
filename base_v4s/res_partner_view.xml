<?xml version="1.0"?>
<openerp>
    <data>
        
        <record id="view_crm_partner_v4s_form1" model="ir.ui.view">
            <field name="name">res.partner.crm.v4s.inherit1</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="after">
                    <field name="phone2" placeholder="e.g. +32.81.81.37.00"/>
                </xpath>

                <xpath expr="//kanban/field[@name='phone']" position="after">
                    <field name="phone2" placeholder="e.g. +32.81.81.37.00"/>
                </xpath>

                <xpath expr="//div/field[@name='phone']/.." position="after">
                    <div t-if="record.phone2.raw_value">Phone2: <field name="phone2"/></div>
                </xpath>

                <xpath expr="//sheet/group/field[@name='phone']" position="after">
                    <field name="phone2"/>
                </xpath>

                <xpath expr="//sheet/group/field[@name='function']" position="before">
                    <field name="prename"/>
                    <field name="title_communication"/>
                </xpath>

                <xpath expr="//sheet/group/field[@name='function']" position="after">
                    <field name="company_ext"/>
                    <field name="department_company_ext"/>
                    <field name="birthday_communication"/>
                </xpath>

                <xpath expr="//sheet/group/field[@name='function']" position="after">
                    <field name="company_ext"/>
                    <field name="department_company_ext"/>
                    <field name="birthday_communication"/>
                </xpath>

                <xpath expr="//field[@name='comment']" position="after">
                    <group colspan="2" col="2">
                        <separator colspan="4" string="Details"/>
                        <field name="description" nolabel="1" colspan="4"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name='comment']" position="before">
                    <separator colspan="4" string="Notes"/>
                </xpath>

                <!--<group colspan="2" col="8">-->
                    <!--<field name="phone2" colspan="7" />-->
                    <!--<button name="action_dial_phone2" string="Dial" type="object" />-->
                <!--</group>-->
            </field>
        </record>
        
